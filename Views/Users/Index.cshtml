@model IEnumerable<First_MVC_Project.Models.User>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <form asp-action="Dashboard" asp-route-id="">
        Year: <input type="number" /><br />
        <button type="submit">Get Dashboard</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-email="@item.Email">Edit</a>
                    <a asp-action="Details" asp-route-email="@item.Email">Details</a>
                    <a asp-action="Delete" asp-route-email="@item.Email">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>